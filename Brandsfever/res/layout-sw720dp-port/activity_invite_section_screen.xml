<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".InviteSection_screen" >
     
 <RelativeLayout 
         android:id="@+id/RL2"
         android:layout_below="@+id/RL1"
         android:layout_height="fill_parent"
         android:layout_margin="25dp"
         android:layout_width="fill_parent"
         android:background="@android:color/white">
         
       <RelativeLayout 
             android:id="@+id/set_one"
             android:layout_height="wrap_content"
             android:layout_width="fill_parent"
             android:layout_marginTop="20dp">
             
             <TextView 
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textSize="25sp"
                 android:typeface="sans"
                 android:text="@string/inviteheader"
                 android:textColor="#ff8e1345"
                 android:layout_marginLeft="50dp"
                 android:layout_centerInParent="true"/>
             </RelativeLayout>
             
       <View 
           android:id="@+id/two"
           android:layout_below="@+id/set_one"
           android:layout_height="1dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="10dp"
           android:layout_width="fill_parent"
           android:background="@android:color/darker_gray"/>
       
        <LinearLayout
             android:id="@+id/set_two"
             android:layout_below="@+id/two"
             android:layout_height="100dp"
             android:orientation="horizontal"
             android:weightSum="3"
             android:layout_width="fill_parent"
             android:layout_margin="10dp">
             
            <LinearLayout      
                android:id="@+id/a_one"           
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:background="@drawable/a_one"
                android:layout_weight="1">
                
                <TextView 
                    android:id="@+id/invitation_send"
                    android:layout_height="25dp"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                
            </LinearLayout>
            
            <LinearLayout    
                android:id="@+id/a_two"             
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:background="@drawable/a_two"
                android:layout_weight="1">
                
                <TextView 
                    android:id="@+id/invitation_accepted"
                    android:layout_height="25dp"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                
            </LinearLayout>
            
            <LinearLayout         
                android:id="@+id/a_three"        
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:background="@drawable/a_three"
                android:layout_weight="1">
                
                <TextView 
                    android:id="@+id/store_credit"
                    android:layout_height="25dp"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
                
            </LinearLayout>
        </LinearLayout>
           
        <View 
           android:id="@+id/three"
           android:layout_below="@+id/set_two"
           android:layout_height="1dp"
           android:layout_margin="10dp"
           android:layout_width="fill_parent"
           android:background="@android:color/darker_gray"/>
        
        <RelativeLayout 
             android:id="@+id/set_three"
             android:layout_below="@+id/three"
             android:layout_height="120dp"
             android:layout_width="fill_parent"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp">
             
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="240dp"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="Invite your friends from your addessbook"/>
            
            <View 
                android:layout_height="fill_parent"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                android:layout_width="1dp"
                android:background="@android:color/darker_gray"/>
            
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="240dp"
                android:gravity="center"
                android:layout_marginRight="45dp"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:text="Invite your friends from facebook"/>
             
           </RelativeLayout>
           
        <View 
           android:id="@+id/four"
           android:layout_below="@+id/set_three"
           android:layout_height="1dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_width="fill_parent"
           android:background="@android:color/darker_gray"/>
        
        <LinearLayout 
            android:id="@+id/set_four"
            android:layout_below="@+id/four"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="450dp"
            android:layout_width="fill_parent">
            
            <LinearLayout 
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_weight="1.3"
                android:orientation="vertical">
                
                <RelativeLayout 
                    android:layout_height="110dp"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    
                    <ImageButton 
                        android:id="@+id/gmail_contacts"
                        android:contentDescription="@string/tagone"
                        android:layout_alignParentLeft="true"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:layout_width="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/gmail"/>
                    
                    <View 
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:layout_width="1dp"
                        android:background="@android:color/darker_gray"/>
                    
                    <ImageButton 
                        android:id="@+id/yahoo_contacts"
                        android:contentDescription="@string/tagone"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:layout_height="fill_parent"
                        android:layout_width="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/yahoo"/>
                    
                </RelativeLayout>
                <View 
		           android:layout_height="1dp"
		           android:layout_marginTop="4dp"
		           android:layout_margin="10dp"
		           android:layout_width="fill_parent"
		           android:background="@android:color/darker_gray"/>
                
                <RelativeLayout 
                    android:layout_height="110dp"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    
                    <ImageButton 
                        android:id="@+id/hotmail_contacts"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="@string/tagone"
                        android:layout_height="fill_parent"
                        android:layout_width="150dp"
                        android:layout_margin="5dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/windows"/>
                    
                    <View 
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:layout_width="1dp"
                        android:background="@android:color/darker_gray"/>
                    
                    <ImageButton 
                        android:id="@+id/msngr_contacts"
                        android:contentDescription="@string/tagone"
                        android:layout_alignParentRight="true"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:layout_width="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/msn"/>
                    
                </RelativeLayout>
                <View 
		           android:layout_height="1dp"
		           android:layout_marginTop="4dp"
		           android:layout_margin="10dp"
		           android:layout_width="fill_parent"
		           android:background="@android:color/darker_gray"/>
                <RelativeLayout 
                    android:layout_height="110dp"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    
                    <ImageButton 
                       android:id="@+id/aol_contacts"
                        android:contentDescription="@string/tagone"
                        android:layout_alignParentLeft="true"
                        android:layout_height="fill_parent"
                        android:layout_width="150dp"
                        android:layout_margin="5dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/aol"/>
                    
                    <View 
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:layout_width="1dp"
                        android:background="@android:color/darker_gray"/>
                    
                    <ImageButton
                        android:id="@+id/phone_contacts"
                        android:contentDescription="@string/tagone"
                        android:layout_alignParentRight="true"
                        android:layout_height="fill_parent"
                        android:layout_width="150dp"
                        android:layout_margin="5dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/phone_contacts"/>
                    
                </RelativeLayout>                
            </LinearLayout>
            <View 
	           android:layout_height="fill_parent"
	           android:layout_margin="10dp"
	           android:layout_width="1dp"
	           android:background="@android:color/darker_gray"/>
            <LinearLayout 
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.7"
                android:orientation="vertical">
                
                <ImageButton 
                    android:id="@+id/invite_your_friendz"
                    android:contentDescription="@string/tagone"
                    android:layout_height="150dp"
                    android:background="@drawable/facebook_invite"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="260dp"/>
                
            </LinearLayout>
            
        </LinearLayout>
       
         <View 
	            android:id="@+id/five"
	           android:layout_below="@+id/set_four"
	           android:layout_height="1dp"
	           android:layout_margin="10dp"
	           android:layout_width="fill_parent"
	           android:background="@android:color/darker_gray"/>
         
         <TextView 
             android:id="@+id/six"
             android:layout_below="@+id/five"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:textSize="17sp"
             android:layout_width="fill_parent"
             android:textColor="#000000"
             android:gravity="center"
             android:text="Invite your friends with their email addresses"/>
         
         <View 
	            android:id="@+id/seven"
	           android:layout_below="@+id/six"
	           android:layout_height="1dp"
	           android:layout_marginTop="4dp"
	           android:layout_margin="10dp"
	           android:layout_width="fill_parent"
	           android:background="@android:color/darker_gray"/>
         
         <LinearLayout 
            android:id="@+id/eight"
            android:layout_below="@+id/seven"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="80dp"
            android:layout_width="fill_parent">
            
             <EditText 
                 android:id="@+id/enter_email_address"
                 android:layout_height="60dp"
                 android:layout_width="0dp"
                 android:layout_weight="1.4"
                 android:layout_marginRight="10dp"
                 android:inputType="textEmailAddress"
                 android:hint="e.g.example@gmail.com"
                 android:textColorHint="@android:color/darker_gray"/>
             
             <ImageButton 
                 android:id="@+id/send_email_invite"
                 android:layout_height="60dp"
                 android:contentDescription="@string/tagone"
                 android:layout_marginLeft="5dp"
                 android:layout_width="0dp"
                 android:layout_weight="0.6"
                 android:background="@drawable/invite"/>
             
        </LinearLayout>
        <View 
	            android:id="@+id/nine"
	           android:layout_below="@+id/eight"
	           android:layout_height="1dp"
	           android:layout_marginTop="4dp"
	           android:layout_margin="10dp"
	           android:layout_width="fill_parent"
	           android:background="@android:color/darker_gray"/>
       <RelativeLayout 
             android:id="@+id/footer_set"
             android:layout_height="100dp"
             android:layout_width="fill_parent"
             android:layout_alignParentBottom="true">
             
             <ImageButton 
                 android:layout_height="120dp"
                 android:contentDescription="@string/tagone"
                 android:layout_width="120dp"
                 android:background="@drawable/lo"
                 android:scaleType="fitXY"
                 android:layout_alignParentRight="true"/>
             
         </RelativeLayout>         
     </RelativeLayout>
    

</RelativeLayout>
