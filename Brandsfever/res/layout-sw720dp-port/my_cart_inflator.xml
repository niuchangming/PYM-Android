<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:weightSum="5"
    android:layout_margin="10dp"
    android:baselineAligned="false"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:background="@android:color/transparent"
        android:layout_height="fill_parent" >

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/my_oder_img"
            android:layout_centerInParent="true"
            android:layout_width="fill_parent"
            android:contentDescription="@string/brandsfever"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:padding="6dp"
            android:layout_height="fill_parent" />
    </RelativeLayout>
    
    <View 
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"/>
     <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2.6"
        android:background="@android:color/transparent"
        android:layout_height="fill_parent" >
        
         <TextView 
             android:id="@+id/set_product_name"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:layout_alignParentTop="true"
             android:textColor="#000000"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="7dp"
             android:textSize="20sp"/>
         
         <TextView 
             android:id="@+id/unitprice_tag"
             android:layout_height="wrap_content"
             android:layout_width="120dp"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:layout_below="@+id/set_product_name"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="10dp"
             android:textColor="#000000"
             android:textSize="18sp"
             android:text="Unit Price:"/>
         <TextView 
             android:id="@+id/set_unit_price"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:textColor="#000000"
             android:layout_marginLeft="90dp"
             android:layout_toRightOf="@+id/unitprice_tag"
             android:layout_below="@+id/set_product_name"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="7dp"
             android:textSize="18sp"/>
        
     </RelativeLayout>
      <View 
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
     <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_height="fill_parent" >
        
         <TextView 
             android:id="@+id/Quantity_tag"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:textSize="16sp"
             android:text="Quantity"
             android:textColor="@android:color/black"/>
         
         <RelativeLayout 
             android:layout_height="25dp"
             android:layout_marginTop="5dp"
             android:background="@drawable/edit_bg"       
             android:layout_width="100dp">
             
             <Button
                 android:id="@+id/subtract_quantity"
                 android:layout_height="fill_parent"
                 android:layout_width="25dp"
                 android:layout_alignParentLeft="true"
                 android:background="@null"
                 android:textColor="#000"
                 android:textSize="16sp"
                 android:layout_centerInParent="true"
                 android:text="-"
                 android:gravity="center"
                 android:padding="2dp"/>
             
             <TextView 
                 android:id="@+id/setQuantity_text"
                 android:layout_height="fill_parent"
                 android:layout_width="50dp"
                 android:layout_centerInParent="true"
                 android:gravity="center"
                 android:textSize="16sp"
                 android:textColor="@android:color/black"/>
             
             <Button
                 android:id="@+id/add_quantity"
                 android:layout_height="fill_parent"
                 android:layout_width="25dp"
                 android:layout_alignParentRight="true"
                 android:background="@null"
                 android:textColor="#000"
                 android:textSize="16sp"
                 android:layout_centerInParent="true"
                 android:text="+"
                 android:gravity="center"
                 android:padding="2dp"/>
             
         </RelativeLayout>
         
         <Button
             android:id="@+id/remove_text_click"
             android:layout_height="30dp"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:background="@null"
             android:layout_marginTop="5dp"
             android:text="Remove"
             android:textColor="@android:color/darker_gray"/>
         
         <TextView 
             android:id="@+id/total_tag"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:layout_marginTop="5dp"
             android:text="Total"
             android:textColor="@android:color/black"/>
         
         <TextView 
             android:id="@+id/_total_amount"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:textSize="17sp"
             android:layout_marginTop="3dp"
             android:textColor="#ff8e1345"/>
        
     </LinearLayout>
    

</LinearLayout>
