<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".Login_page" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_profile"
        android:orientation="vertical"
        android:padding="50dp" >

        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:hint="Email address:"
            android:inputType="textEmailAddress"
            android:padding="30dp" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_bg"
            android:hint="Password:"
            android:inputType="textPassword"
            android:padding="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="50dp"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/hit_phone_login"
            android:layout_width="226dp"
            android:layout_height="55dp"
            android:background="@drawable/phone_submit"
            android:contentDescription="@string/brandsfever" />

        <ImageButton
            android:id="@+id/go_to_register"
            android:layout_width="226dp"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/phone_signup"
            android:contentDescription="@string/brandsfever" />
    </LinearLayout>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forgot your password ?"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/phone_fb_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/fbbtn"
        android:contentDescription="@string/brandsfever" />

</LinearLayout>