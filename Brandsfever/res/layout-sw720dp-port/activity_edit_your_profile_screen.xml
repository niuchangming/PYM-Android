<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".EditYourProfile_screen" >

    
     <RelativeLayout 
         android:id="@+id/RL2"
         android:layout_below="@+id/RL1"
         android:layout_height="fill_parent"
         android:layout_margin="25dp"
         android:layout_width="fill_parent"
         android:background="@android:color/white">
         
         <RelativeLayout 
             android:id="@+id/one"
             android:layout_height="95dp"
             android:layout_width="fill_parent">
             
             <TextView 
                 android:id="@+id/edit_my_profile"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="Edit your profile"
                 android:textColor="#8e1345"
                 android:textSize="25sp"
                 android:layout_centerInParent="true"/>
             <TextView 
                 android:id="@+id/edit_my_profile_line"
                 android:layout_below="@+id/edit_my_profile"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_width="wrap_content"
                 android:text="Please provide the following information to update your profile."
                 android:textColor="@android:color/darker_gray"
                 android:textSize="18sp"
                 android:layout_centerInParent="true"/>
             
         </RelativeLayout>
         <View 
             android:id="@+id/two"
             android:layout_below="@+id/one"
             android:background="@android:color/darker_gray"
             android:layout_height="1dp"
             android:layout_margin="15dp"
             android:layout_width="fill_parent"/>
         <LinearLayout 
             android:id="@+id/three"
             android:layout_below="@+id/two"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:gravity="center">
             
             <ImageView 
                 android:layout_height="100dp"
                 android:layout_width="100dp"
                 android:layout_gravity="center"
                 android:background="@drawable/big_flower"/>
             
             <TextView 
                 android:id="@+id/user_id"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="20sp"
                 android:textColor="#000"
                 android:layout_gravity="center"/>
             <TextView 
                 android:id="@+id/user_email"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center"
                 android:textColor="#8e1345"
                 android:textSize="22sp"
                 android:layout_marginTop="10dp"/>
             
             </LinearLayout>
             <LinearLayout 
	             android:id="@+id/four"
	             android:layout_below="@+id/three"
	             android:layout_height="60dp"
	             android:layout_marginTop="50dp"
	             android:layout_marginLeft="40dp"
	             android:layout_marginRight="40dp"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:weightSum="2"
	             android:gravity="center">
             
                 <EditText 
	                 android:id="@+id/Enter_firstname"
	                 android:inputType="textPersonName"
	                 android:layout_height="fill_parent"	  
	                 android:paddingLeft="10dp"
	                 android:paddingRight="10dp"
	                 android:background="@drawable/bg_setting_phone"              
	                  android:layout_marginRight="20dp"
                     android:layout_weight="1"
	                 android:layout_width="0dp"
	                 android:hint="First Name"/>
                 <EditText 
	                 android:id="@+id/Enter_gender"
	                 android:inputType="text"
	                 android:layout_height="fill_parent"
	                    android:paddingLeft="10dp"
	                 android:paddingRight="10dp"
	                 android:background="@drawable/bg_setting_phone"
                     android:layout_weight="1"
                      android:layout_marginLeft="20dp"
	                 android:layout_width="0dp"
	                 android:hint="Gender"/>
             
              </LinearLayout>
              <LinearLayout 
	             android:id="@+id/five"
	             android:layout_below="@+id/four"
	             android:layout_height="60dp"
	             android:layout_marginTop="40dp"
	             android:layout_marginLeft="40dp"
	             android:layout_marginRight="40dp"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:weightSum="2"
	             android:gravity="center">
             
                 <EditText 
	                 android:id="@+id/Enter_lastname"
	                 android:inputType="textPersonName"
	                 android:layout_height="fill_parent"	
	                    android:paddingLeft="10dp"
	                 android:paddingRight="10dp"
	                 android:background="@drawable/bg_setting_phone"                
	                  android:layout_marginRight="20dp"
                     android:layout_weight="1"
	                 android:layout_width="0dp"
	                 android:hint="Last Name"/>
                 <EditText 
	                 android:id="@+id/Enter_birthdate"
	                 android:inputType="date"
	                 android:layout_height="fill_parent"
	                    android:paddingLeft="10dp"
	                 android:paddingRight="10dp"
	                 android:background="@drawable/bg_setting_phone"
                     android:layout_weight="1"
                      android:layout_marginLeft="20dp"
	                 android:layout_width="0dp"
	                 android:hint="Birthdate"/>
             
              </LinearLayout>
              <LinearLayout 
	             android:id="@+id/six"
	             android:layout_below="@+id/five"
	             android:layout_height="60dp"
	             android:layout_marginTop="40dp"
	             android:layout_marginLeft="40dp"
	             android:layout_marginRight="40dp"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:weightSum="2"
	             android:gravity="center">
             
                 <EditText 
	                 android:id="@+id/Enter_mobile_number"
	                 android:inputType="number"
	                 android:layout_height="fill_parent"
	                 android:maxLength="8"	                
	                    android:paddingLeft="10dp"
	                 android:paddingRight="10dp"
	                 android:background="@drawable/bg_setting_phone" 	                
	                 android:layout_marginRight="20dp"
                     android:layout_weight="1"
	                 android:layout_width="0dp"
	                 android:hint="Mobile number"/>
                 <LinearLayout 
                     android:layout_height="fill_parent"	                
	                 android:layout_marginRight="20dp"
	                 android:layout_marginTop="20dp"
	                 android:orientation="horizontal"
                     android:layout_weight="1"
	                 android:layout_width="0dp" >

                     <CheckBox
                         android:id="@+id/checkBox1"
                         android:layout_width="40dp"
                         android:layout_marginLeft="15dp"
                         android:layout_height="40dp"/>
                     
                     <TextView 
                         android:id="@+id/r_u"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textColor="#000"
                         android:textSize="20sp"
                         android:textStyle="bold"
                         android:text="Receive updates"
                         android:layout_marginLeft="20dp"/>
                   
               </LinearLayout>
              </LinearLayout>
              <LinearLayout 
	             android:id="@+id/seven"
	             android:layout_below="@+id/six"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="3dp"
	             android:layout_marginLeft="40dp"
	             android:layout_marginRight="40dp"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:weightSum="2"
	             android:gravity="center">
                 
                  <TextView 
                      android:id="@+id/mob_text"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:layout_width="0dp"
                      android:textSize="13sp"
                      android:textColor="@android:color/darker_gray"
                      android:text="Enter your mobile number without country code."/>
                  <TextView 
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:layout_width="0dp"
                      android:layout_marginLeft="150dp"
                      android:textSize="13sp"
                      android:textColor="@android:color/darker_gray"
                      android:text="Receive regular e-mails about the website."/>
                 
              </LinearLayout>
              <LinearLayout 
	             android:id="@+id/eight"
	             android:layout_below="@+id/seven"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="0dp"
	             android:layout_marginLeft="40dp"
	             android:layout_marginRight="40dp"
	             android:orientation="horizontal"
	             android:layout_width="fill_parent"
	             android:weightSum="2"
	             android:gravity="center">
             
                 <EditText 
	                 android:inputType="number"
	                 android:layout_height="fill_parent"	                
	                  android:layout_marginRight="20dp"
                     android:layout_weight="1"
	                 android:layout_width="0dp"
	                 android:focusable="false"
	                 android:focusableInTouchMode="false"
	                 android:background="@android:color/transparent"/>
                 <LinearLayout 
                     android:layout_height="fill_parent"	                
	                 android:layout_marginRight="20dp"
	                 android:layout_marginTop="20dp"
	                 android:orientation="horizontal"
                     android:layout_weight="1"
	                 android:layout_width="0dp" >

                     <CheckBox
                         android:id="@+id/checkBox2"
                         android:layout_width="40dp"
                         android:layout_marginLeft="15dp"
                         android:layout_height="40dp"/>
                     
                     <TextView 
                         android:id="@+id/p_e"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textColor="#000"
                         android:textSize="20sp"
                         android:textStyle="bold"
                         android:text="Prefer English"
                         android:layout_marginLeft="20dp"/>
                   
               </LinearLayout>
               </LinearLayout>
               <RelativeLayout 
	             android:layout_below="@+id/eight"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="150dp"
	             android:layout_width="fill_parent">
                 <ImageButton 
	                 android:id="@+id/save_edited_profile"
	                 android:contentDescription="@string/brandsfever"
	                 android:layout_height="70dp"
	                 android:layout_centerInParent="true"
	                 android:layout_width="450dp"
	                 android:background="@drawable/save_profile_tab"/>
                 </RelativeLayout>
          <RelativeLayout 
             android:id="@+id/footer_set"
             android:layout_height="100dp"
             android:layout_width="fill_parent"
             android:layout_alignParentBottom="true">
             
             <ImageButton 
                 android:layout_height="120dp"
                 android:layout_width="120dp"
                 android:background="@drawable/lo"
                 android:scaleType="fitXY"
                 android:layout_alignParentRight="true"/>
             </RelativeLayout>
         </RelativeLayout>

</RelativeLayout>
