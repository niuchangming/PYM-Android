<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".InviteFragment" >

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Invite_tag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/inviteheader"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/three"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/two"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/invitation_send"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0/5"
            android:textColor="#fff" />

        <View
            android:layout_width="1sp"
            android:layout_height="fill_parent"
            android:background="#fff" />

        <TextView
            android:id="@+id/invitation_accepted"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0/5"
            android:textColor="#fff" />

        <View
            android:layout_width="1sp"
            android:layout_height="fill_parent"
            android:background="#fff" />

        <TextView
            android:id="@+id/store_credit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0/5"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/four"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/three"
        android:layout_gravity="center"
        android:background="#ff8e1345"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Invitation Sent \n Email/Facebook"
            android:textColor="#fff"
            android:textSize="12sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="fill_parent"
            android:background="#fff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Friends Accepted \n Email/Facebook"
            android:textColor="#fff"
            android:textSize="12sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="fill_parent"
            android:background="#fff" />
        
        <LinearLayout 
            android:id="@+id/a_three"  
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1">
            
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Store Credit \n Earned"
            android:textColor="#fff"
            android:textSize="12sp" />
            
        </LinearLayout>

        
    </LinearLayout>

    <Button
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/four"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:text="Invite your friends from addressbook"
        android:textColor="#fff"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/five"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/img"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageButton
                android:id="@+id/gmail_contacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.9"
                android:adjustViewBounds="true"
                android:background="@drawable/gmail_phone"
                android:contentDescription="@string/tagone"
                android:scaleType="fitXY" />

            <View
                android:layout_width="1sp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <ImageButton
                android:id="@+id/yahoo_contacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1.2"
                android:adjustViewBounds="true"
                android:background="@drawable/yahoo_phone"
                android:contentDescription="@string/tagone" />

            <View
                android:layout_width="1sp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <ImageButton
                android:id="@+id/hotmail_contacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/hot_mail_phone"
                android:contentDescription="@string/tagone" />

            <View
                android:layout_width="1sp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <ImageButton
                android:id="@+id/msngr_contacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.9"
                android:adjustViewBounds="true"
                android:background="@drawable/msn_phone"
                android:contentDescription="@string/tagone"
                android:scaleType="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageButton
                android:id="@+id/aol_contacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.9"
                android:adjustViewBounds="true"
                android:background="@drawable/aol_phone"
                android:contentDescription="@string/tagone" />

            <View
                android:layout_width="1sp"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/invite_from_address_book"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="#fff"
                android:gravity="center"
                android:text="Your can import your address book from your email accounts"
                android:textColor="#000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/img2"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/five"
        android:layout_marginTop="15dp"
        android:background="#324b80"
        android:text="Invite your friends from facebook"
        android:textColor="#fff"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/six"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/img2"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical" >
        
        <ImageButton 
            android:id="@+id/invite_your_friendz"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/minvit"
            android:contentDescription="@string/brandsfever"/>
        
    </LinearLayout>
    <Button
        android:id="@+id/img3"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/six"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:text="Invite your friends from email addresses"
        android:textColor="#fff"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/seven"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/img3"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/enter_email_address"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_bg"
            android:hint="e.g.email.example.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/send_email_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/invite_btn_phone"
            android:contentDescription="@string/tagone" />
    </LinearLayout>
</RelativeLayout>