<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_top1"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/top_head_phone" >
       
        <ImageView
            android:id="@+id/crossbutton"
            android:contentDescription="@string/brandsfever"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_cross_login"
            android:visibility="visible" />
    </RelativeLayout>
     <com.brandsfever.TouchImageView
         android:id="@+id/imageView1"
         android:layout_below="@+id/layout_top1"
         android:layout_width="fill_parent"
         android:contentDescription="@string/brandsfever"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:layout_height="fill_parent"/>

</RelativeLayout>