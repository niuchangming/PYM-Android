<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/list_bg"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="3">
        
        <TextView 
            android:id="@+id/set_campaign_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="11sp"/>
        
        <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"/>
        
        <ImageView 
            android:id="@+id/set_product_img"
            android:contentDescription="@string/brandsfever"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:layout_margin="2dp"
            android:layout_weight="0.6"
            android:background="@drawable/cart_bg"/>
        
        <TextView 
            android:id="@+id/set_product_name"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="2dp"
            android:textColor="#000"
            android:textSize="11sp"/>
        
    </LinearLayout>
    
    <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="1dp"
            android:background="@android:color/darker_gray"/>
    
    <LinearLayout 
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="3">
        
        <TextView 
            android:id="@+id/set_quantity_tag"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Quantity:"
            android:textColor="#000"
            android:textSize="11sp"/>
        
        <TextView 
            android:id="@+id/set_quantity"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12sp"/>
        
        <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"/>
        
        <TextView 
            android:id="@+id/set_unitprice_tag"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Unit-Price:"
            android:textColor="#000"
            android:textSize="11sp"/>
        
        <TextView 
            android:id="@+id/set_unitprice"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12sp"/>
        
        <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"/>
        
         <TextView 
            android:id="@+id/set_totalprice_tag"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="Total:"
            android:textColor="#000"
            android:textSize="11sp"/>
        
        <TextView 
            android:id="@+id/set_totalprice"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="12sp"/>
        
    </LinearLayout>
    

</LinearLayout>
