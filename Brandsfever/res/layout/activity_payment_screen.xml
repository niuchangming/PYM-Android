<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".PaymentActivity" >

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/top_head_phone" >

        <ImageButton
            android:id="@+id/main_menu"
            android:layout_width="48dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/menu_bg"
            android:contentDescription="@string/brandsfever" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="35dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dip"
            android:background="@drawable/back_button"
            android:contentDescription="@string/brandsfever" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/one"
        android:background="@drawable/paymentconfirm_phone"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/parent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/two" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/three"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_height="26dp"
                android:background="#000" >

                <TextView
                    android:id="@+id/order_confirmation_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:text="Order Confirmation"
                    android:textColor="#fff" />

                <ImageButton
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bottom_arrow"
                    android:contentDescription="@string/brandsfever" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/four"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/three"
                android:background="#EEEEEE"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/s_a"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ship_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Shiping address"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/set_shipping_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="2sp"
                        android:textSize="11sp" />
                </LinearLayout>

                <View
                    android:layout_width="1sp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#fff" />

                <LinearLayout
                    android:id="@+id/b_a"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/bill_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:text="Billing address"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/set_billing_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="2sp"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/five"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/four"
                android:background="#fff" >

                <TextView
                    android:id="@+id/your_order_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10sp"
                    android:text="Your Order"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/six"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/five"
                android:background="#ff8e1345" >

                <TextView
                    android:id="@+id/set_campaign_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:text="Campaign"
                    android:textColor="#fff" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="115dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/set_product_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="125dp"
                    android:text="Product"
                    android:textColor="#fff" />

                <ImageButton
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bottom_arrow"
                    android:contentDescription="@string/brandsfever" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/seven"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/six"
                android:background="#fff" >

                <ListView
                    android:id="@+id/set_orders"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp" >
                </ListView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/eight"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/seven"
                android:layout_marginTop="4dp"
                android:background="#fff"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/promotion_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   Use promotion code"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/remove_pcode"
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:layout_margin="1pt"
                        android:background="#000000"
                        android:visibility="gone"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="Remove promocode"
                        android:textColor="#000000"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/cart_bg"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <EditText
                            android:id="@+id/enter_promo_code"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_margin="1pt"
                            android:layout_weight="1.6"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:background="#fff"
                            android:hint="Promo Code"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/apply_promo_code"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:padding="1dp"
                            android:background="@drawable/ok_btn"
                            android:textColor="#fff" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/apply_SC"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        
                        <TextView 
                            android:id="@+id/store_credit_tag"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:textColor="#000"
                            android:textSize="9sp"
                            android:text="Use store credit(s)  "/>
                        <TextView 
                            android:id="@+id/Set_store_credit"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:textColor="#000"
                            android:textStyle=""
                            android:singleLine="true"
                            android:textSize="9sp"
                            android:text="-S$0"/>
                        
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/remove_SC"
                        android:layout_width="fill_parent"
                        android:visibility="gone"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        
                        <TextView 
                            android:id="@+id/Remove_credit_tag"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:textColor="#000"
                            android:textSize="9sp"
                            android:text="Remove store credit(s)  "/>
                        <TextView 
                            android:id="@+id/Remove_store_credit"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:textColor="#000"
                            android:singleLine="true"
                            android:textSize="9sp"
                            android:text="-S$0"/>
                        
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        
                        <TextView
                            android:id="@+id/order_subtotal_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.9"
                            android:gravity="right"
                            android:text="Subtotal"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginLeft="3sp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/cart_phone"
                            android:contentDescription="@string/brandsfever" />

                        <TextView
                            android:id="@+id/order_subtotal_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        
                        <TextView
                            android:id="@+id/order_shiping_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.9"
                            android:gravity="right"
                            android:text="Shipping"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginLeft="3sp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/bus_phone"
                            android:contentDescription="@string/brandsfever" />

                        <TextView
                            android:id="@+id/order_shiping_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >
                        
                        <TextView
                            android:id="@+id/order_total_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.9"
                            android:gravity="right"
                            android:text="Order Total"
                            android:textColor="#000"
                            android:textSize="13sp" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_marginLeft="3sp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/cart_phone"
                            android:contentDescription="@string/brandsfever" />

                        <TextView
                            android:id="@+id/order_total_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/nine"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/eight"
                android:background="#000" >

                <TextView
                    android:id="@+id/payment_option_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:text="Payment Option"
                    android:textColor="#fff" />

                <ImageButton
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bottom_arrow"
                    android:contentDescription="@string/brandsfever" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ten"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/nine"
                android:background="@android:color/transparent" >

                <ImageView
                    android:id="@+id/paypal_logo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/paypal_image"
                    android:contentDescription="@string/brandsfever"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eleven"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/ten"
                android:background="@android:color/transparent" >

                <ImageButton
                    android:id="@+id/pay_with_paypal"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/paypal_btn"
                    android:contentDescription="@string/brandsfever" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>