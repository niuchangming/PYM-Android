<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:baselineAligned="false"
    android:padding="2dp"
    android:layout_margin="2dp"
    android:layout_height="100dp"
    android:weightSum="3"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:id="@+id/one"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="2">
        
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <ImageView 
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/brandsfever"
            android:adjustViewBounds="true"            
            android:background="@drawable/flower"/>
        
         <TextView 
            android:id="@+id/campaign_tag"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="Campaign(s)"
            android:textColor="#000"/>
            
        </LinearLayout>
        
        
        <TextView 
            android:id="@+id/set_product_name"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="32dp"
            android:textSize="11sp"
            android:textColor="#ff8e1345"/>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>
        
        <TextView 
            android:id="@+id/orderId_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
             android:layout_marginLeft="32dp"
            android:textSize="11sp"
            android:text="Order Id"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_orderId"
            android:layout_height="wrap_content"
             android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:textColor="#ff8e1345"/>
        
    </LinearLayout>
    
    <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>
    
    <LinearLayout 
         android:id="@+id/two"
         android:orientation="vertical"
         android:padding="2dp"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1">
        
        <TextView 
            android:id="@+id/date_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="Date"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:textColor="#ff8e1345"/>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>
        
        <TextView 
            android:id="@+id/status_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="Status"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:textColor="#ff8e1345"/>
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>
        
        <TextView 
            android:id="@+id/total_price_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="Total price"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_total_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:textColor="#ff8e1345"/>
        
    </LinearLayout>
    

</LinearLayout>
