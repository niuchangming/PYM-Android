<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ChangePassword_screen" >

     <RelativeLayout 
         android:id="@+id/RL2"
         android:layout_below="@+id/RL1"
         android:layout_height="fill_parent"
         android:layout_margin="25dp"
         android:layout_width="fill_parent"
         android:background="@android:color/white">
         
         <RelativeLayout 
             android:id="@+id/one"
             android:layout_height="60dp"
             android:layout_width="fill_parent">
             
             <TextView 
                 android:id="@+id/change_password_tag"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="Change Password"
                 android:textColor="#8e1345"
                 android:textSize="22sp"
                 android:layout_centerInParent="true"/>
             
         </RelativeLayout>
         
         <View 
             android:id="@+id/two"
             android:layout_below="@+id/one"
             android:background="@android:color/darker_gray"
             android:layout_height="1dp"
             android:layout_margin="15dp"
             android:layout_width="fill_parent"/>
         
         <LinearLayout 
             android:id="@+id/three"
             android:layout_below="@+id/two"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:gravity="center">
             
             <ImageView 
                 android:layout_height="80dp"
                 android:contentDescription="@string/brandsfever"
                 android:layout_width="80dp"
                 android:layout_gravity="center"
                 android:background="@drawable/big_flower"/>
             
             <TextView 
                 android:id="@+id/user_name"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginTop="10dp"
                 android:textSize="20sp"
                 android:textColor="#000"
                 android:layout_gravity="center"/>
             <TextView 
                 android:id="@+id/user_email"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center"
                 android:textColor="#8e1345"
                 android:textSize="22sp"
                 android:layout_marginTop="10dp"/>
             
             <EditText 
                 android:id="@+id/Enter_new_password"
                 android:inputType="textPassword"
                 android:background="@drawable/edit_bg"
                 android:layout_height="45dp"
                 android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:layout_marginTop="30dp"
                 android:layout_width="350dp"
                 android:hint="New password"/>
             <EditText 
                 android:id="@+id/Confirm_new_password"
                 android:inputType="textPassword"
                 android:layout_height="45dp"
                 android:paddingLeft="10dp"
                 android:paddingRight="10dp"
                 android:background="@drawable/edit_bg"
                 android:layout_marginTop="20dp"
                 android:layout_width="350dp"
                 android:hint="Confirm New password"/>
             
             <ImageButton 
                 android:id="@+id/change_paswrd_submit"
                 android:layout_height="60dp"
                 android:contentDescription="@string/brandsfever"
                 android:layout_marginTop="50dp"
                 android:layout_width="300dp"
                 android:background="@drawable/submit"/>
             
         </LinearLayout>
         
             <RelativeLayout 
             android:id="@+id/footer_set"
             android:layout_height="90dp"
             android:layout_width="fill_parent"
             android:layout_alignParentBottom="true">
             
             <ImageButton 
                 android:layout_height="90dp"
                 android:contentDescription="@string/brandsfever"
                 android:layout_width="110dp"
                 android:background="@drawable/lo"
                 android:scaleType="fitXY"
                 android:layout_alignParentRight="true"/>
             
         </RelativeLayout>         
     </RelativeLayout>

</RelativeLayout>
