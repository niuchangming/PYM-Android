<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MyOrderHistory_screen" >

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@drawable/topbar" >

        <ImageButton
            android:id="@+id/main_menu"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/menu_bg"
            android:contentDescription="@string/brandsfever" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dip"
            android:layout_height="65dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/back_button"
            android:contentDescription="@string/brandsfever" />

        <ImageButton
            android:id="@+id/cart_btn"
            android:layout_width="75dp"
            android:layout_height="65dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/cart_btn_bg"
            android:contentDescription="@string/brandsfever" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/RL1"
        android:layout_margin="18dp"
        android:background="@android:color/white" >

        <RelativeLayout
            android:id="@+id/set_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/Your_order_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:text="Your Orders"
                android:textColor="#ff8e1345"
                android:textSize="22sp"
                android:typeface="sans" />
        </RelativeLayout>

        <View
            android:id="@+id/two"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/set_one"
            android:layout_margin="12dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/five"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer_set"
            android:layout_below="@+id/two" >

            <ListView
                android:id="@+id/order_history_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer_set"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true" >

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/lo"
                android:contentDescription="@string/brandsfever"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>