<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SeeMyStoreCredits_settings" >

    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/RL1"
        android:layout_margin="18dp"
        android:background="@android:color/white" >

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/store_credit_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="StoreCredits"
                android:textColor="#ff8e1345"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/two"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/one"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/two"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/granted_by_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.6"
                android:text="Granted by"
                android:textColor="#ff8e1345"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/amount_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Amount"
                android:textColor="#ff8e1345"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/valid_till_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Valid Till"
                android:textColor="#ff8e1345"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:id="@+id/four"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/three"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/five"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer_set"
            android:layout_below="@+id/four" >

            <ListView
                android:id="@+id/set_store_credits"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="5pt" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer_set"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true" >

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/lo"
                android:contentDescription="@string/brandsfever"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>