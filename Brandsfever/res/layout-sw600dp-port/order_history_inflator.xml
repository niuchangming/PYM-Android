<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:baselineAligned="false"
    android:background="#fff"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:weightSum="5"
    android:orientation="horizontal" >
    
    
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">
        
        <TextView 
            android:id="@+id/orderId_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Order Id"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_orderId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="#ff8e1345"/>
        
        
    </LinearLayout>
        <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView 
            android:id="@+id/campaign_tag"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Campaign(s)"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_product_name"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>
        
    </LinearLayout>
    
        <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>
    
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="2">
        
        
        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="fill_parent">
            
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                
        <TextView 
            android:id="@+id/date_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:text="Date"
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#ff8e1345"/>
                
            </LinearLayout>
            
            <View 
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:layout_margin="2dp"
            android:background="@android:color/darker_gray"/>
            
             <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                
         <TextView 
            android:id="@+id/status_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:text="Status"
            android:textColor="#000"/>
        
          <TextView 
            android:id="@+id/set_status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#ff8e1345"/>
                
      </LinearLayout>
            
        </LinearLayout>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>
        
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            
         <TextView 
            android:id="@+id/total_price_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Total price:  "
            android:textColor="#000"/>
        
        <TextView 
            android:id="@+id/set_total_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff8e1345"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    

</LinearLayout>
