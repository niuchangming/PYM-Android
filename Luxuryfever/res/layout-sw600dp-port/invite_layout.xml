<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".InviteModule" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@drawable/topbar" >

        <ImageButton
            android:id="@+id/main_menu"
            android:layout_width="75dip"
            android:layout_height="65dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/menu_bg" />

        <ImageButton
            android:id="@+id/bck_btn"
            android:layout_width="21dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="130dip"
            android:background="@drawable/back_button"
            android:contentDescription="@string/tagone" />

        <ImageButton
            android:id="@+id/cart_btn"
            android:layout_width="75dip"
            android:layout_height="65dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/cart_btn_bg"
            android:contentDescription="@string/tagone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:text="@string/inviteheader"
                    android:textColor="#ff8e1345"
                    android:textSize="24sp"
                    android:typeface="sans" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/set_two"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/a_one"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/a_one" >

                    <TextView
                        android:id="@+id/invitation_send"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/a_two"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/a_two" >

                    <TextView
                        android:id="@+id/invitation_accepted"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/a_three"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/a_three" >

                    <TextView
                        android:id="@+id/store_credit"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/set_three"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"
                    android:text="Invite your friends from your addessbook"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="45dp"
                    android:gravity="center"
                    android:text="Invite your friends from facebook"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/four"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/set_four"
                android:layout_width="fill_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1.3"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp" >

                        <ImageButton
                            android:id="@+id/gmail_contacts"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/gmail"
                            android:contentDescription="@string/tagone" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:background="@android:color/darker_gray" />

                        <ImageButton
                            android:id="@+id/yahoo_contacts"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/yahoo"
                            android:contentDescription="@string/tagone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/darker_gray" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp" >

                        <ImageButton
                            android:id="@+id/hotmail_contacts"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/windows"
                            android:contentDescription="@string/tagone" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:background="@android:color/darker_gray" />

                        <ImageButton
                            android:id="@+id/msngr_contacts"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/msn"
                            android:contentDescription="@string/tagone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/darker_gray" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp" >

                        <ImageButton
                            android:id="@+id/aol_contacts"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/aol"
                            android:contentDescription="@string/tagone" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:background="@android:color/darker_gray" />

                        <ImageButton
                            android:id="@+id/phone_contacts"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:background="@drawable/phone_contacts"
                            android:contentDescription="@string/tagone" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/invite_your_friendz"
                        android:layout_width="200dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:background="@drawable/facebook_invite"
                        android:contentDescription="@string/tagone"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/five"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/six"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Invite your friends with their email addresses"
                android:textColor="#000000"
                android:textSize="17sp" />

            <View
                android:id="@+id/seven"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/eight"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:orientation="horizontal"
                android:weightSum="2" >

                <EditText
                    android:id="@+id/enter_email_address"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:hint="e.g.example@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@android:color/darker_gray" />

                <ImageButton
                    android:id="@+id/send_email_invite"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/invite"
                    android:contentDescription="@string/tagone" />
            </LinearLayout>

            <View
                android:id="@+id/nine"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/lo"
            android:contentDescription="@string/tagone"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>