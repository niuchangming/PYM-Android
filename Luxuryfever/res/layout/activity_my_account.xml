<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".MyAccount" >

     <RelativeLayout 
         android:id="@+id/one"
         android:layout_height="50dip"
         android:layout_width="fill_parent"
         android:background="@drawable/top_head_phone">
         
        <ImageButton 
             android:id="@+id/main_menu"
             android:layout_height="48dip"
             android:layout_width="48dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="5dip"
             android:background="@drawable/menu_bg"/>
        
        <ImageButton 
             android:id="@+id/back_btn"
             android:layout_height="45dip"
             android:layout_width="30dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="50dip"
             android:background="@drawable/back_button"/>
        
        <ImageButton 
             android:id="@+id/cart_btn"
             android:layout_height="48dip"
             android:layout_width="48dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dip"
             android:background="@drawable/cart_btn_bg"/>
         
    </RelativeLayout>
    
     <LinearLayout 
        android:id="@+id/set"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/nav_bg"
        android:gravity="center"
        android:layout_width="fill_parent">
        
        <TextView 
            android:id="@+id/myaccount_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="My Account"/>
        
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/two"
        android:layout_height="250dp"
        android:layout_width="fill_parent"
        android:background="@drawable/bg_setting_phone"
        android:layout_margin="18dp"
        android:orientation="vertical"
        android:weightSum="6" >
        
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"            
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/editprofile"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_margin="1dp"
                android:gravity="left|center"
                android:text="  Edit my user profile"
                android:textColor="#000"
                android:background="@drawable/str" />
            
        </LinearLayout>
        
        <View 
            android:layout_height="1sp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"/>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"            
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/changedpassword"                
                android:text="  Change password"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="left|center"
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:background="@drawable/str_bg" />
            
        </LinearLayout>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"            
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/orderhistory"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:gravity="left|center"
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:background="@drawable/str_bg"
                android:text="  See my order history"/>
            
        </LinearLayout>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"            
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/seeinvitedpeople"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:gravity="left|center"
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:background="@drawable/str_bg"
                android:text="  See the people i have invited"/>
            
        </LinearLayout>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"/>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"            
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/seestorecredits"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:gravity="left|center"
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:background="@drawable/str_bg"
                android:text="  See my store credits"/>
            
        </LinearLayout>
        
        <View 
            android:layout_height="1sp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"            
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/faq"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="left|center"
                android:layout_width="fill_parent"
                android:textColor="#000"
                android:background="@drawable/str"
                android:text="  Faq"/>
            
        </LinearLayout>
        
         
      </LinearLayout>

</LinearLayout>
