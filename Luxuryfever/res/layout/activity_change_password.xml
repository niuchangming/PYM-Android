<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".ChangePassword" >

    
    <RelativeLayout 
         android:id="@+id/one"
         android:layout_height="55dip"
         android:layout_width="fill_parent"
         android:background="@drawable/top_head_phone">
         
        <ImageButton 
             android:id="@+id/main_menu"
             android:layout_height="45dip"
             android:layout_width="60dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="5dip"
             android:background="@drawable/menu_bg"/>
        
        <ImageButton 
             android:id="@+id/back_btn"
             android:layout_height="45dip"
             android:layout_width="50dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="50dip"
             android:background="@drawable/back_button"/>
        
        <ImageButton 
             android:id="@+id/cart_btn"
             android:layout_height="45dip"
             android:layout_width="60dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dip"
             android:background="@drawable/cart_btn_bg"/>
         
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/two"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/nav_bg"
        android:gravity="center"
        android:layout_width="fill_parent">
        
        <TextView 
            android:id="@+id/change_password_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="Change Password"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/parent_layout"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="fill_parent">
        
        <ImageView 
            android:layout_height="80dp"
            android:layout_width="83dp"
            android:background="@drawable/big_flower"/>
        
        <TextView 
            android:id="@+id/user_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="5dp"/>
        
        <TextView 
             android:id="@+id/user_email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#8e1345"
            android:layout_marginTop="5dp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="91dp"
        android:background="@drawable/edit_bg"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:weightSum="2"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="fill_parent">
        
        <EditText 
            android:id="@+id/Enter_new_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"            
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#fff"
            android:hint="New password"
            android:layout_weight="1"/>
        
        <View 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>
        
        <EditText 
            android:id="@+id/Confirm_new_password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:hint="Confirm New password"
            android:background="#fff"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

     <Button 
         android:id="@+id/change_paswrd_submit"
         android:layout_height="35dp"
         android:text="SUBMIT"
         android:layout_width="fill_parent"
         android:layout_margin="15dp"
         android:layout_gravity="center"
         android:textColor="#FFFFFF"
         android:background="#000000"/>
    
</LinearLayout>
