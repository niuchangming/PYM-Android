<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".StoreCredis_SettingPage" >

   <RelativeLayout 
         android:id="@+id/one"
         android:layout_height="50dip"
         android:layout_width="fill_parent"
         android:background="@drawable/top_head_phone">
         
        <ImageButton 
             android:id="@+id/main_menu"
             android:layout_height="48dip"
             android:layout_width="48dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="5dip"
             android:background="@drawable/menu_bg"/>
        
        <ImageButton 
             android:id="@+id/back_btn"
             android:layout_height="45dip"
             android:layout_width="30dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="50dip"
             android:background="@drawable/back_button"/>
        
        <ImageButton 
             android:id="@+id/cart_btn"
             android:layout_height="48dip"
             android:layout_width="48dip"
             android:contentDescription="@string/brandsfever"
             android:layout_centerInParent="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dip"
             android:background="@drawable/cart_btn_bg"/>
         
    </RelativeLayout>
    
   <RelativeLayout 
         android:id="@+id/two"
         android:layout_below="@+id/one"
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"
         android:background="#ffffff">
        
       <TextView 
           android:id="@+id/store_credit_tag"
           android:layout_height="30dp"
           android:layout_centerInParent="true"
           android:textSize="16sp"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:text="Store Credits"
           android:textColor="#000"/>
       
       <View 
           android:layout_height="1sp"
           android:layout_width="fill_parent"
           android:layout_below="@+id/store_credit_tag"
           android:background="#000"/>
        
       </RelativeLayout>
       
   <LinearLayout 
         android:id="@+id/three"
         android:layout_below="@+id/two"
         android:layout_height="25dip"
         android:layout_width="fill_parent"
         android:weightSum="3"
         android:orientation="horizontal"
         android:background="#b7286e">
        
       <TextView 
           android:id="@+id/granted_by_tag"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_width="0dp"
           android:textSize="14sp"
           android:gravity="left"
           android:layout_marginLeft="5dp"
           android:layout_weight="1.6"
           android:text="Granted by"
           android:textColor="#fff"/>
       
       <View 
           android:layout_height="fill_parent"
           android:layout_width="1sp"
           android:background="#fff"/>
       
       <TextView 
           android:id="@+id/amount_tag"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_width="0dp"
           android:textSize="14sp"
           android:gravity="center"
           android:layout_weight="0.7"
           android:text="Amount"
           android:textColor="#fff"/>
        <View 
           android:layout_height="fill_parent"
           android:layout_width="1sp"
           android:background="#fff"/>
       
       <TextView 
           android:id="@+id/valid_till_tag"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_width="0dp"
           android:textSize="14sp"
           android:gravity="center"
           android:layout_weight="0.7"
           android:text="Valid Till"
           android:textColor="#fff"/>
        
      </LinearLayout>
      
   <RelativeLayout 
         android:id="@+id/four"
         android:layout_below="@+id/three"
         android:layout_height="wrap_content"
         android:layout_width="fill_parent">
       
       <ListView 
             android:id="@+id/set_store_credits"
             android:layout_height="wrap_content"             
             android:divider="@android:color/white"
             android:dividerHeight="2pt"
              android:visibility="gone"
             android:layout_width="fill_parent">
             
         </ListView>
         
        <ListView 
             android:id="@+id/set_store_credits_dummy"
             android:visibility="gone"
             android:background="#FFFFFF"
             
             android:layout_height="wrap_content"             
             android:divider="@android:color/darker_gray"
             android:dividerHeight="0.50dp"
             android:layout_width="fill_parent">
             
         </ListView>
       
  </RelativeLayout>

</RelativeLayout>
